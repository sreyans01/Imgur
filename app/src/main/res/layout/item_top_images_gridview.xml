<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/fractional_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="1/5"
                android:alpha="0.8"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:background="@drawable/background_rect_curved_all_10"
                android:backgroundTint="@color/light_grey_bg_1"
                android:textStyle="bold"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="@+id/image"
                app:layout_constraintTop_toTopOf="@+id/image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:orientation="vertical"
                android:alpha="0.8"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Went on a hike through mountains today Went on a hike through mountains today Went on a hike through mountains today"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:paddingTop="4dp"
                    android:paddingHorizontal="12dp"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="4dp"
                    android:paddingRight="12dp"
                    android:text="13/10/22 04:48 AM"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>