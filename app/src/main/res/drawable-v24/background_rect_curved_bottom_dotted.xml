<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid android:color="#E8F1FF" />
            <stroke
                android:dashGap="2dp"
                android:dashWidth="2dp"
                android:width="1dp"
                android:color="#A6C7FF" />

            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>
